platform :ios, '14.0'  # or keep 17.0 if you want; 14.0 is broadly safe

# Flutter helper (provided by Flutter SDK)
require File.expand_path(File.join('..', 'Flutter', 'podhelper.rb'), __FILE__)

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)  # <-- correct signature
  end
end