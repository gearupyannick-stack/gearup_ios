rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is club member
    function isClubMember(clubId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/clubs/$(clubId)/members/$(request.auth.uid));
    }
    
    // Helper function to check if user is club owner
    function isClubOwner(clubId) {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/clubs/$(clubId)).data.ownerId == request.auth.uid;
    }
    
    // Helper function to check if user is club moderator or owner
    function isClubModeratorOrOwner(clubId) {
      let club = get(/databases/$(database)/documents/clubs/$(clubId)).data;
      return isAuthenticated() && 
             (club.ownerId == request.auth.uid || 
              request.auth.uid in club.moderatorIds);
    }
    
    // Clubs collection
    match /clubs/{clubId} {
      // Anyone authenticated can read public clubs, members can read their clubs
      allow read: if isAuthenticated() && 
                     (resource.data.visibility == 'public' || isClubMember(clubId));
      
      // Only authenticated users can create clubs
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerId == request.auth.uid;
      
      // Only owner can update or delete club
      allow update, delete: if isClubOwner(clubId);
      
      // Club members subcollection
      match /members/{memberId} {
        allow read: if isClubMember(clubId);
        allow create: if isAuthenticated();
        allow update, delete: if isClubModeratorOrOwner(clubId) || memberId == request.auth.uid;
      }
      
      // Club chat subcollection
      match /chat/{messageId} {
        allow read: if isClubMember(clubId);
        allow create: if isClubMember(clubId) && 
                         request.resource.data.senderId == request.auth.uid;
        allow update, delete: if isClubModeratorOrOwner(clubId);
      }
      
      // Race challenges subcollection
      match /raceChallenges/{challengeId} {
        allow read: if isClubMember(clubId);
        allow create: if isClubMember(clubId) && 
                         request.resource.data.creatorId == request.auth.uid;
        allow update: if isClubMember(clubId);
        allow delete: if isClubModeratorOrOwner(clubId);
      }
    }
    
    // User notifications
    match /users/{userId}/clubNotifications/{notificationId} {
      allow read, write: if isAuthenticated() && userId == request.auth.uid;
    }
    
    // Game rooms (existing race system)
    match /gameRooms/{roomCode} {
      allow read, write: if isAuthenticated();
      
      match /players/{playerId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated() && playerId == request.auth.uid;
      }
      
      match /messages/{messageId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && userId == request.auth.uid;
    }
    
    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
